{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block javascripts %}
    <script src="{{ asset('/js/registrationScript.js') }}"></script>
{% endblock %}
{% block stylesheets %}
    <link href="{{ asset('css/register.css') }}" rel="stylesheet">
{% endblock %}
{% block body %}
    <h1 class="mx-auto text-center">Register</h1>
    
    <div class="card bg-color-white-op-50 p-3 mx-auto d-flex width-700 flex-colomn">
        {{ form_errors(form) }}

        {{ form_start(form) }}
            <div id="form_p1" class="form_p1">
                {{ form_row(form.Register.email, {'attr': {'class':'form-control'}}) }}
                {{ form_row(form.Register.pseudo, {'attr': {'class':'form-control'}}) }}
                {{ form_row(form.Register.plainPassword, {'attr': {'class':'form-control'}}, {
                    label: 'Password'
                }) }}
                {{ form_row(form.Register.nom, {'attr': {'class':'form-control'}}) }}
                {{ form_row(form.Register.prenom, {'attr': {'class':'form-control'}}) }}
                {{ form_row(form.Register.numTel, {'attr': {'class':'form-control'}}) }}
                {{ form_row(form.Register.agreeTerms) }}
            </div>
            <div id="form_p2" class="form_p2 d-none">
                {{form_row(form.adr.numRue, {'attr': {'class':'form-control'}})}}
                {{form_row(form.adr.rue, {'attr': {'class':'form-control'}})}}
                <label for="codePostale">Code postale</label>
                <input type="text" name="codePostale" id="codePostaleForm" class="form-control">
                {{form_row(form.adr.communSIREN, {'attr': {'class':'form-control'}})}}
            </div>
            <div class="d-flex justify-content-center">
                <button id="nextButton" type="button" class="btn btn-secondary bg-color-gray btn-w-120 mx-2">Suite</button>
                <button id="backButton" type="button" class="btn btn-secondary bg-color-gray btn-w-120 mx-2 d-none">Retour</button>
                {{form_row(form.Terminer,{'attr': {'class':'btn btn-secondary bg-color-gray btn-w-120 mx-2 d-none'}})}}
                {# <button type="button" class="btn bg-color-gray btn-secondary btn-w-45">Terminer</button>     #}
            </div>

        {{ form_end(form) }}
        
    </div>
    
{% endblock %}
